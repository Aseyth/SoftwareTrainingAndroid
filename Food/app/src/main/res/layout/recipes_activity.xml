<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#90caf9">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical"
    android:nestedScrollingEnabled="false">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title"
        android:id="@+id/titleReceipe"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Description"
        android:id="@+id/description"
        android:layout_below="@+id/titleReceipe"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:editable="false"
        android:gravity="center_horizontal"
        android:singleLine="false"
        android:nestedScrollingEnabled="false" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageReceipe"
        android:layout_below="@+id/description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Healthy"
        android:id="@+id/healthy"
        android:textAlignment="center"
        android:layout_below="@+id/imageReceipe"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gluten Free"
        android:id="@+id/glutenFree"
        android:textAlignment="center"
        android:layout_below="@+id/healthy"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ingredients"
        android:id="@+id/label1"
        android:layout_marginTop="50dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/glutenFree"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Products"
        android:id="@+id/textView3"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignTop="@+id/label1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/ingredientsLabel"
        android:layout_alignParentBottom="false"
        android:layout_alignStart="@+id/label1"
        android:layout_below="@+id/label1"
        android:layout_toStartOf="@+id/imageReceipe"
        android:text="ingredient"
        android:layout_alignParentTop="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/productsLabel"
        android:text="products"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Muslim Friendly"
        android:id="@+id/muslimFriendly"
        android:textAlignment="center"
        android:layout_below="@+id/glutenFree"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

</ScrollView>